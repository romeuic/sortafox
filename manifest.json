{

  "manifest_version": 2,
  "name": "Sortafox",
  "version": "1.0",

  "description": "Firefox extension to sort items on Facebook's Marketplace.",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://www.facebook.com/marketplace/*"],
      "js": ["sortafox.js"]
    }
  ]

}